---
  import PinMapIcon from "../icons/pinMapIcon.astro"
  import Link from "../components/Link.astro"
---
<section class="hero">
  <div class="content-hero">
    <h2>Desarrollador Full Stack</h2>
    <PinMapIcon />
    <div class="location">
      <p>Queretaro, Qro.</p>
|   </div><!-- .location -->
    <Link url='#' textLink="Contactar" isButton/>
  </div>
</section>
<style>
  .hero {
    background-image: url(./hero.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    height: 450px;
    position: relative;
    margin-bottom: 2rem;
  }

  .content-hero {
    align-items: center;
    background-color: rgba(0, 0, 0, .7); /* last syntax */
    background-color: rgb(0 0 0 / 70%);
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    position: absolute;
    width: 100%;
  }

  .content-hero h2,
  .content-hero p {
    color: var(--white);

    .location {
    display: flex;
    align-items: flex-end;
  }

</style>
